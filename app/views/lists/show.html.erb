
<div class="p-3">
    <div class="card p-3">
        
    <div class="card-body">
        <h5 class="card-title"><%= @list.name %></h5>
        <ul class="card-text list-group">
            <% @list_entries.each do |list_entry| %>
                <li class="list-group-item">
                <%= list_entry.description %>
                </li>
            <% end %>
        </ul>
    </div>
    </div>


    <h2>Add to list</h2>
    <%= form_with model: @list_entry, url:create_entry_path(@list) do |form| %>
    <div>
        <%= form.label :description %><br>
        <%= form.text_field :description %>
    </div>

    <div>
        <%= form.submit %>
    </div>
    <% end %>

</div>
